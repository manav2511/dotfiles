# OPTIMIZATION: Use faster plugin loading strategy
# Load autosuggestions (lightweight, load immediately)
source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh

# OPTIMIZATION: Defer syntax highlighting to first prompt
# This saves ~10% of startup time
zsh-defer-init-syntax-highlighting() {
  source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
  unset -f zsh-defer-init-syntax-highlighting
}
# Run after first prompt is shown
add-zsh-hook precmd zsh-defer-init-syntax-highlighting

# Load history substring search (lightweight)
source /usr/share/zsh/plugins/zsh-history-substring-search/zsh-history-substring-search.zsh

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down
bindkey '^[[3~' delete-char

